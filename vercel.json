{
  "version": 2,
  "framework": "nextjs",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "https://www.revusystems.ca",
      "destination": "https://revusystems.ca",
      "permanent": true
    },
    {
      "source": "https://www.revusystems.ca/(.*)",
      "destination": "https://revusystems.ca/$1",
      "permanent": true
    }
  ]
}