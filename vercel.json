{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "host": "www.revusystems.ca",
      "status": 308,
      "headers": { "Location": "https://revusystems.ca/$1" }
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_MODE": "production",
    "NEXT_PUBLIC_API_URL": "https://revusystems.ca/api"
  }
}